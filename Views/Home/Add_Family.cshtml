@{
    ViewBag.Title = "Add_Family";
}
<link href="~/Content/style.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/Content/mobile.css" media="screen and (max-width : 568px)">
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/mobile.js"></script>
<script src="~/Scripts/jquery-2.2.3.js"></script>
<body style="background-image:url('/images/grid.jpg');background-repeat:repeat;">
    <div id="header">
        <div id="body">
            <img src="~/images/jj.png" alt="" style="width:80%;height:20%;" />
        </div>
        <ul id="navigation">
            <li>
                @Html.ActionLink("Find Person", "Admin_index", "Admin")
            </li>
            <li>
                @Html.ActionLink("Find Family", "FindFamily", "Admin")
            </li>
            <li>
                @Html.ActionLink("Update Profile", "update_profile", "Admin")
            </li>
            <li>
                @Html.ActionLink("View All Users", "view_All_users", "Admin")
            </li>
        </ul>
    </div>
    <div id="body">
        <h1><span>Missing Person's</span></h1>
    </div>
    <br><br>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script type="text/javascript">
        function show(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#img').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }
    </script>

    @Html.BeginForm("Add_Person", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })
    <div style="width:auto;height:auto;">
        <img id="img" src="~/images/mustache1.jpg" alt="" style="width:30%;height:30%;border:2px solid black"> &nbsp;

        <input type="file" id="imageSrc" name="file" onchange="show(this)" />
    </div>
    <div style="width:50%;height:100%">


        <table>
            <tr>
                <td>
                    <label style="float:left"><b>Name:</b></label>
                    @Html.TextBox("name", null, new { placeHolder = "Enter Name", @class = "input", Style = "float:right;" });
                </td>
                <td>
                    <label style="float:left"><b>Age:</b></label>
                    @Html.TextBox("age", null, new { placeHolder = "Enter Age", @class = "input", Style = "float:right;" });
                </td>
            </tr>
            <tr>
                <td>
                    <label style="float:left"><b>Color:</b></label>
                    @Html.TextBox("color", null, new { placeHolder = "Enter Color", @class = "input", Style = "float:right;" });
                </td>
                <td>
                    <label style="float:left"><b>Place Where Found:</b></label>
                    @Html.TextBox("placeWF", null, new { placeHolder = "Enter Place", @class = "input", Style = "float:right;" });
                </td>
            </tr>
            <tr>
                <td>
                    <label style="float:left;margin-right:10.5%;"><b>Gender:</b></label>
                    @Html.TextBox("gender", null, new { placeHolder = "Enter Gender", @class = "input", Style = "float:right;" });
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextArea("detail", null, new { @class = "input", placeHolder = "Enter Detail" });
                </td>
            </tr>
        </table>
        <center>
            <br>
            <input type="submit" style="width:20%;" id="btn" name="enter_btn" value="Enter" />
        </center>

    </div>
</body>